package net.breezeware.carejoy.graph.entity.clinical;

import java.io.Serializable;
import java.util.List;

import org.neo4j.ogm.annotation.NodeEntity;
import org.neo4j.ogm.annotation.Relationship;

import com.google.gson.Gson;

import net.breezeware.carejoy.graph.entity.CarejoyEntity;
import net.breezeware.carejoy.graph.entity.CodeableConcept;
import net.breezeware.carejoy.graph.entity.Patient;

@NodeEntity(label = "VitalSign")
/**
 * Entity to hold a single Vital sign (Heart Rate/Respiratory
 * Rate/Weight/Height/BP) of a patient.It is based on the 'Observation' resource
 * on FHIR.
 * 
 * References:- https://www.hl7.org/fhir/observation.html
 *
 */
public class VitalSign extends CarejoyEntity implements Serializable {

    /**
     * 
     */
    private static final long serialVersionUID = 1L;

    // TODO : basedOn

    /**
     * registered | preliminary | final | amended
     */
    private String status;

    /**
     * Type of observation (code / type).
     */
    private CodeableConcept code;

    /**
     * Who and/or what this is about.
     */
    @Relationship(type = "HAS_VITALS", direction = Relationship.INCOMING)
    private Patient subject;

    // TODO : context

    /**
     * Clinically relevant time/time-period for observation.
     */
    private ClinicalDate effective;

    /**
     * Actual result.
     */
    private Value value;

    /**
     * High, low, normal, etc.
     */
    private CodeableConcept interpretation;

    /**
     * Provides guide for interpretation.
     */
    private List<ReferenceRange> referenceRange;

    /**
     * Component results.
     */
    private List<Component> component;

    public String getStatus() {
        return status;
    }

    public void setStatus(String status) {
        this.status = status;
    }

    public CodeableConcept getCode() {
        return code;
    }

    public void setCode(CodeableConcept code) {
        this.code = code;
    }

    public Patient getSubject() {
        return subject;
    }

    public void setSubject(Patient subject) {
        this.subject = subject;
    }

    public ClinicalDate getEffective() {
        return effective;
    }

    public void setEffective(ClinicalDate effective) {
        this.effective = effective;
    }

    public Value getValue() {
        return value;
    }

    public void setValue(Value value) {
        this.value = value;
    }

    public CodeableConcept getInterpretation() {
        return interpretation;
    }

    public void setInterpretation(CodeableConcept interpretation) {
        this.interpretation = interpretation;
    }

    public List<ReferenceRange> getReferenceRange() {
        return referenceRange;
    }

    public void setReferenceRange(List<ReferenceRange> referenceRange) {
        this.referenceRange = referenceRange;
    }

    public List<Component> getComponent() {
        return component;
    }

    public void setComponent(List<Component> component) {
        this.component = component;
    }

    @Override
    public String toString() {
        return new Gson().toJson(this);
    }

}