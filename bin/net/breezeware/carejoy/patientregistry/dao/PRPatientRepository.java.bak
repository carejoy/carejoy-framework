package net.breezeware.carejoy.patientregistry.dao;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.querydsl.QuerydslPredicateExecutor;
import org.springframework.data.querydsl.binding.QuerydslBinderCustomizer;
import org.springframework.data.querydsl.binding.QuerydslBindings;
import org.springframework.stereotype.Repository;

import com.querydsl.core.types.dsl.StringPath;

import net.breezeware.carejoy.patientregistry.entity.Patient;
import net.breezeware.carejoy.patientregistry.entity.QPatient;

@Repository
public interface PRPatientRepository
        extends JpaRepository<Patient, Long>, QuerydslPredicateExecutor<Patient>, QuerydslBinderCustomizer<QPatient> {

    List<Patient> findByCarejoyUuid(String patientUuid);

    List<Patient> findByOrganizationId(long organizationId);

    @Override
    default public void customize(QuerydslBindings bindings, QPatient Group) {
        bindings.bind(String.class).first((StringPath path, String value) -> path.containsIgnoreCase(value));
        // bindings.excluding(Group.name);
    }

}