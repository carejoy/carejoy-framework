package net.breezeware.carejoy.ehr.dao;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.querydsl.binding.QuerydslBindings;
import org.springframework.stereotype.Repository;

import com.querydsl.core.types.dsl.StringPath;

import net.breezeware.carejoy.ehr.entity.EhrData;
import net.breezeware.carejoy.ehr.entity.QEhrData;

@Repository
public interface EhrDataRepository extends JpaRepository<EhrData, Long> {

    default public void customize(QuerydslBindings bindings, QEhrData feed) {
        bindings.bind(String.class).first((StringPath path, String value) -> path.containsIgnoreCase(value));
    }
}